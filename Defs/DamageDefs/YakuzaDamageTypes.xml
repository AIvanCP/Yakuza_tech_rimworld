  <!-- Custom damage types for Yakuza techniques with technique names -->
  <DamageDef>
    <defName>YakuzaTigerDrop</defName>
    <label>Tiger Drop</label>
    <workerClass>DamageWorker_Blunt</workerClass>
    <externalViolence>true</externalViolence>
    <deathMessage>{0} was destroyed by a Tiger Drop.</deathMessage>
    <hediff>Crush</hediff>
    <harmAllLayersUntilOutside>false</harmAllLayersUntilOutside>
    <impactSoundType>Blunt</impactSoundType>
    <armorCategory>Blunt</armorCategory>
    <minDamageToFragment>4</minDamageToFragment>
    <defaultDamage>8</defaultDamage>
    <defaultArmorPenetration>0.20</defaultArmorPenetration>
    <explosionAffectOutsidePartsWhenExplodingInside>true</explosionAffectOutsidePartsWhenExplodingInside>
    <explosionHeatEnergyPerDamage>0.8</explosionHeatEnergyPerDamage>
    <explosionCellMote>Mote_BlastFlame</explosionCellMote>
    <explosionColorEdge>(1, 0.7, 0.7)</explosionColorEdge>
    <explosionColorCenter>(1, 1, 0.7)</explosionColorCenter>
    <soundImpactImplant>BulletImpact_Metal</soundImpactImplant>
  </DamageDef>

